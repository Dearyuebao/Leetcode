/*
// Definition for a Node.
class Node {
    public int val;
    public Node left;
    public Node right;
    public Node next;

    public Node() {}

    public Node(int _val,Node _left,Node _right,Node _next) {
        val = _val;
        left = _left;
        right = _right;
        next = _next;
    }
};
*/
class Solution {
    public Node connect(Node root) {
        //dummy
        Node dummy=new Node(0);
        Node pre=dummy;
        Node dummynode=new Node(0);
        Node res=dummynode;
        res.next=root;
        while(root!=null)
        {
            if(root.left!=null)
            {
                pre.next=root.left;
                pre=pre.next;
            }
            if(root.right!=null)
            {
                pre.next=root.right;
                pre=pre.next;
            }
            root=root.next;
            if(root==null)
            {
                pre=dummy;
                root=pre.next;
                dummy.next=null;
            }
        }
        return dummynode.next;
    }
}
